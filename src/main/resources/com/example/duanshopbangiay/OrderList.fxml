<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.duanshopbangiay.OrderController">
    <VBox spacing="10" alignment="TOP_LEFT">
        <HBox alignment="CENTER" spacing="20">
            <padding>
                <Insets top="0" right="0" bottom="10" left="0"/>
            </padding>
            <Button onAction="#switchToDisplayShop" text="Back to shop" prefWidth="100"/>
        </HBox>
        <TableView fx:id="orderTable" prefWidth="965" maxWidth="965">
            <columns>
                <TableColumn fx:id="orderIdColumn" text="ID Orders" prefWidth="100"/>
                <TableColumn fx:id="customerNameColumn" text="Customer Name" prefWidth="100"/>
                <TableColumn fx:id="totalProductsColumn" text="Total Product " prefWidth="100" />
                <TableColumn fx:id="idProductColumn" prefWidth="100" text="ID Product" />
                <TableColumn fx:id="productNameColumn" prefWidth="150" text="Product Name" />
                <TableColumn fx:id="imageColumn" prefWidth="300" text="Image" />
                <TableColumn fx:id="priceColumn" prefWidth="100" text="Price" />
                <TableColumn fx:id="quantityColumn" prefWidth="100" text="Quantity" />
                <TableColumn fx:id="colorColumn" prefWidth="100" text="Color" />
                <TableColumn fx:id="sizeColumn" prefWidth="100" text="Size" />
                <TableColumn fx:id="totalAmountColumn" text="Total amount" prefWidth="100"/>
                <TableColumn fx:id="orderStatusColumn" text="Status" prefWidth="120"/>
                <TableColumn fx:id="actionColumn" text="Actions" prefWidth="145"/>
            </columns>
        </TableView>
    </VBox>
</AnchorPane>