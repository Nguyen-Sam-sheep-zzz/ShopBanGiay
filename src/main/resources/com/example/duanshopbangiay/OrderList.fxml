<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.duanshopbangiay.OrderController">
    <VBox spacing="10" alignment="TOP_LEFT">
        <HBox alignment="CENTER" spacing="20">
            <padding>
                <Insets top="0" right="0" bottom="10" left="0"/>
            </padding>
            <Button onAction="#switchToDisplayShop" text="Back to shop" prefWidth="100"/>
        </HBox>
        <TableView fx:id="orderTable" prefWidth="665" maxWidth="665">
            <columns>
                <TableColumn fx:id="customerNameColumn" text="Customer Name" prefWidth="100" />
                <TableColumn fx:id="productNameColumn" text="Product" prefWidth="100" />
                <TableColumn fx:id="quantityColumn" text="Quantity" prefWidth="100"/>
                <TableColumn fx:id="totalAmountColumn" text="Total amount" prefWidth="100"/>
                <TableColumn fx:id="orderStatusColumn" text="Status" prefWidth="120"/>
                <TableColumn fx:id="actionColumn" text="Actions" prefWidth="145"/>
            </columns>
        </TableView>
    </VBox>
</AnchorPane>
